{
  "name": "dockerps",
  "version": "0.5.0",
  "description": "A better `docker ps`",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sadorlovsky/dockerps.git"
  },
  "homepage": "https://github.com/sadorlovsky/dockerps",
  "bugs": {
    "url": "https://github.com/sadorlovsky/dockerps/issues",
    "email": "sadorlovsky@gmail.com"
  },
  "author": "Zach Orlovsky <sadorlovsky@gmail.com>",
  "preferGlobal": true,
  "bin": {
    "dockerps": "bin/dockerps.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "build": "babel src -d lib",
    "prebuild": "rimraf lib",
    "lint": "eslint src test",
    "lint-staged": "lint-staged",
    "clinton": "clinton",
    "test": "NODE_ENV=test nyc --check-coverage --lines 100 ava",
    "pretest": "rimraf coverage",
    "check": "npm run lint && npm run test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run check && npm run build && clinton",
    "precommit": "npm run lint-staged",
    "prepush": "npm run check"
  },
  "files": [
    "bin",
    "lib"
  ],
  "keywords": [
    "dockerps",
    "pretty",
    "docker",
    "ps",
    "cli",
    "utility"
  ],
  "dependencies": {
    "chalk": "^1.1.1",
    "cli-spinners": "^0.2.0",
    "cli-table2": "^0.2.0",
    "common-tags": "^1.3.1",
    "got": "^6.3.0",
    "meow": "^3.7.0",
    "ora": "^0.3.0",
    "query-string": "^4.2.3",
    "timeago.js": "^1.0.7"
  },
  "devDependencies": {
    "@sadorlovsky/eslint-config": "^0.12.0",
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.0.4",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "clinton": "^0.7.1",
    "coveralls": "^2.11.12",
    "eslint": "^3.3.0",
    "eslint-plugin-ava": "^3.0.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-fp": "^1.3.0",
    "eslint-plugin-import": "^1.13.0",
    "husky": "^0.11.6",
    "lint-staged": "^2.0.3",
    "mitm": "^1.2.1",
    "nyc": "^7.1.0",
    "rimraf": "^2.5.4",
    "strip-ansi": "^3.0.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "clinton": {
    "rules": {
      "ava": "error",
      "xo": "off",
      "filename-case": "off"
    }
  }
}
